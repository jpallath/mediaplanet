<!DOCTYPE html>
<html ng-app="mediaApp">
  <head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>MediaPlanet</title>
  </head>
  <body>
    <div class="container" ng-controller=AppCtrl>
      <h1>MediaPlanet MessageBoard</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Action</th>
            <th>Media</th>
            <th>Image Link</th>
            <th>Actions</th>
            <th> &nbsp;</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><input class="form-control" ng-model="action.action"placeholder="What do you want to say?"></td>
            <td><input class="form-control" ng-model="action.media"placeholder="Where do you want to say it?"></td>
            <td><input class="form-control" ng-model="action.image" placeholder="Image Link"></td>
            <td><button class="btn btn-info" ng-click="addAction()">Notify</button></td>
            <td><button class="btn btn-primary" ng-click="updateAction()">Update</button></td>
          </tr>
          <tr ng-repeat='action in actionlist'>
            <td>{{action.action}}</td>
            <td>{{action.media}}</td>
            <td>{{action.image}}</td>
            <td><button class="btn btn-warning" ng-click="editAction(action._id)">Edit</button>
            <td><button class="btn btn-danger" ng-click="removeAction(action._id)">Remove</button>
          </tr>
        </tbody>
      </table>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript" src="/script/scripts.js"></script>
  </body>
</html>
